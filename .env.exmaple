
# =============================================================================
# RAG Chatbot Environment Configuration
# =============================================================================

# REQUIRED
OPENAI_API_KEY=your-openai-key-here

# Optional: Web Search Configuration (Google Custom Search)
# Get these from: https://developers.google.com/custom-search/v1/introduction
SEARCH_API_KEY=your_google_search_api_key
SEARCH_ENGINE_ID=your_custom_search_engine_id

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (True/False)
LOG_TO_FILE=True

# Interactive mode - keeps console clean (True/False)
# Set to false if you want to see all logs in console
INTERACTIVE_MODE=True

# Show all logs in console even in interactive mode (True/False)
# Useful for debugging
SHOW_ALL_LOGS=False

# =============================================================================
# Development/Debug Configuration
# =============================================================================

# Enable debug mode for more detailed information
DEBUG_MODE=False

# Enable performance profiling
ENABLE_PROFILING=False
