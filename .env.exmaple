# =============================================================================
# RAG Chatbot Environment Configuration
# =============================================================================

# REQUIRED - OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Optional: Web Search Configuration
# =============================================================================
# Get Google Custom Search credentials from:
# https://developers.google.com/custom-search/v1/introduction

# Google Custom Search API Key (optional)
SEARCH_API_KEY=your_google_search_api_key

# Google Custom Search Engine ID (optional)
SEARCH_ENGINE_ID=your_custom_search_engine_id

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (True/False)
# When True: logs written to logs/ directory
# When False: logs only to console
IS_FILE_LOGGING_ENABLED=False

# =============================================================================
# Application Settings (Advanced)
# =============================================================================

# Environment mode
ENV=development

# Vector database paths (relative to src/)
VECTOR_DB_FILE_PATH=../data/db/vector_index.faiss
METADATA_DB_FILE_PATH=../data/db/metadata.pkl

# Document processing
RAW_DOCS_DIRECTORY=../data/raw_docs
CHUNK_SIZE=1000
CHUNK_OVERLAP=20

# LLM settings
LLM_MODEL_NAME=gpt-3.5-turbo
EMBEDDING_MODEL_NAME=text-embedding-3-small
LLM_TEMPERATURE=0.7
RETRIEVAL_TOP_K=3

# Web search settings
IS_WEB_SEARCH_ENABLED=false
MAX_WEB_SEARCH_RESULTS=5

# Embedding cache
EMBEDDING_CACHE_ENABLED=true
MAX_CACHE_SIZE_MB=500